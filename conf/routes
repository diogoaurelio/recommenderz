# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


###################### Customer Facing ######################

# An example controller showing a sample home page
GET     /                           controllers.ApplicationController.index
# companies
GET     /companies                  controllers.CompanyController.index


# Company controller
GET     /companies/:id              controllers.CompanyController.show(id: String)



###################### JobDating internal backend ######################

# companies
GET     /backend/companies/:id              controllers.backend.BECompanyController.show(id: String)
GET     /backend/addCompany                 controllers.backend.BECompanyController.add
GET     /backend/companies/:id/edit         controllers.backend.BECompanyController.edit(id: String)


###################### API ######################
# Companies
GET     /api/v1/companies/             controllers.api.v1.ApiCompanyController.index
GET     /api/v1/companies/:id          controllers.api.v1.ApiCompanyController.show(id: String)

############ API backend
# Companies
GET     /api/v1/backend/companies/:id              controllers.api.v1.backend.ApiBECompanyController.show(id: String)
POST    /api/v1/backend/createCompany              controllers.api.v1.backend.ApiBECompanyController.create
POST    /api/v1/backend/companies/:id/update       controllers.api.v1.backend.ApiBECompanyController.update(id: String)
POST    /api/v1/backend/companies/:id/delete       controllers.api.v1.backend.ApiBECompanyController.delete(id: String)


###################### Assets management ######################
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#GET     /myfiles/*file              controllers.ExternalAssets.at(path="tmp", file)
#GET     /webjars/*file              controllers.WebJarAssets.at(file)


###################### Examples (to delete in the future) ######################

# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message